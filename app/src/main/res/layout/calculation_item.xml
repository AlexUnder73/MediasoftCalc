<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    app:cardElevation="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtBuf1"
            android:text="@string/expression"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCurrentCalc"
            android:textSize="24sp"
            android:layout_toRightOf="@+id/txtBuf1"
            android:paddingStart="8dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp" />


        <TextView
            android:id="@+id/txtBuf2"
            android:layout_below="@+id/txtCurrentCalc"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtItemResult"
            android:textSize="24sp"
            android:layout_below="@+id/txtCurrentCalc"
            android:layout_toRightOf="@id/txtBuf2"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>